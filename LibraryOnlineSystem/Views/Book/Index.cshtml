@model IEnumerable<LibraryOnlineSystem.Models.Book>

@if (Session["isAdmin"].ToString() == "1")
{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
else
{
    {
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_User_Layout.cshtml";
    }
}


<h2>Index</h2>


<table class="table">
    <form action="Book">
        <tr>
            <th>
                @Html.TextBox("Name")
            </th>
            <th>
                <select name="Genre">
                    <option value="Any">Any</option>
                    <option value="Fantasy">Fantasy</option>
                    <option value="Thriller">Thriller</option>
                    <option value="Action">Action</option>
                    <option value="Horror">Horror</option>
                </select>
            </th>
            <th>

            </th>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>

            </th>
            <th>
                <select name="Rating">
                    <option value="Best">Best</option>
                    <option value="Worst">Worst</option>
                </select>

            </th>
        </tr>
        <input type="submit" />
    </form>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfPublication)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Overview)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.BookId })
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfPublication.Date.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Overview)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
        </tr>
    }

</table>
