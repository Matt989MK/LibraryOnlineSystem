<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Online Library System</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizer")*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/Content/bootstrap.css" />*@
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="~/Content/fontawesome.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.js"></script>


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Main Menu", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Books
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Book Database", "BookDatabase", "Admin")</li>
                            <li>@Html.ActionLink("Book Report", "ReportBook", "Admin")</li>

                        </ul>
                    </li>


                    <li>@Html.ActionLink("My Account", "Account", "Admin", new { userId = Session["UserId"] }, null)</li>


                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Users
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Users", "UsersAdmin", "Admin")</li>
                            <li>@Html.ActionLink("Users Report", "ReportUser", "Admin")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Payments
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Payments", "PaymentsAdmin", "Admin")</li>
                            @*  <li>@Html.ActionLink("Archive", "Archive", "Admin")</li>*@
                            <li>@Html.ActionLink("Payments Report", "ReportPayment", "Admin")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Stocks
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Stocks", "Stocks", "Admin", new { userId = Session["UserId"] }, null)</li>
                            @* <li>@Html.ActionLink("Stocks Report", "ReportStock", "Admin")</li>*@
                        </ul>
                    </li>
                    <li>
                        <a>@Session["UserName"]</a>
                    </li>


                    <li>@Html.ActionLink("Regulations", "Regulations", "Admin")</li>
                    <li>@Html.ActionLink("Reservations", "ListOfReservations", "Admin")</li>
                    <li>@Html.ActionLink("Loans", "ListOfLoans", "Admin")</li>

                    <li>@Html.ActionLink("Log out", "LogOut", "Admin")</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<div style="text-align:center;">
                    <footer>
                        <p>&copy; @DateTime.Now.Year. All Rights Reserved - Online Library System</p>
                    </footer>


            </div>*@
        <br />
         
        </div>
        <h3 class="container">Contact</h3>
        <hr />

        <div style="background-color:darkgray;padding:2%">
            <div class="row container">
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="name" class="form-control" placeholder="Full Name" required="">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" placeholder="Email" required="">
                    </div>
                    <div class="form-group">
                        <label>Phone No</label>
                        <input type="text" name="phoneno" class="form-control" placeholder="Phone No" required="">
                    </div>
                    <div class="form-group">
                        <label>Subject</label>
                        <input type="text" name="subject" class="form-control" placeholder="Subject" required="">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success pull-right">Submit</button>
                    </div>

                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Message</label>
                        <textarea name="message" placeholder="Message" class="form-control" required=""></textarea>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div>
                        <h4 class="mb-4" style="color:black">Address Information</h4>
                        <p style="color:white">PO Box 248, University Road, Leicester, LE1 9Q<span></span></p>
                        <p style="color:white">Phone : +1 123 456 789 </p>

                        <p style="color:white">Email : <a href="mailto:info@dentalmailmail.com" style="outline: none; cursor: inherit;">info@Library.com</a></p>

                    </div>
                </div>
                <div class="col-sm-1"></div>
            </div>
        </div>
   
    <!-- //contact -->
    <!-- footer -->
    <footer class="py-3">
        <div class="container">
            <div class="copyright text-center p-3">
                <p style="color:black">&copy; @DateTime.Now.Year. All Rights Reserved - Online Library System</p>
            </div>

        </div>
    </footer>


   
    @*@Scripts.Render("~/bundles/jquery")*@
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
