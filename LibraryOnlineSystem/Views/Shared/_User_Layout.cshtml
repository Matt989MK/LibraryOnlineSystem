            </ul>
        </div>*@

    <div class="col-sm-2" style=" position: relative; float:right">
        <h4 style="font-size: 30px; color:black;">Library News</h4>
        <ul style="font-size: 20px;">

            @for (int i = 0; i < Enumerable.Count(ViewBag.libraryNews); i++)
            {
                <li><a href="/News/Details?newsId=@ViewBag.newsIds[i]">@ViewBag.libraryNews[i]</a></li>
            }


        </ul>
    </div>

    <div class="body-content container">
        @RenderBody()

        <br />
        <br />
        <br />
        <br />

        @*<div style="text-align:center;">
                <footer>
                    <p>&copy; @DateTime.Now.Year. All Rights Reserved - Online Library System</p>
                </footer>
            </div>*@
        @*background-image: url(&quot;bundles/Jessica-Reilly-and-Michael-Gainey-Feminist-Comic-Book-Club-CREDIT-Matthew-Suarez_t670.jpg&quot;);*@


    </div>

    <!-- //contact -->
    <!-- footer -->
    @*
        fixed footer code
        style="position: fixed; left: 0; bottom: 0;width: 100%"*@
    <footer class="container" style="position: relative;  bottom:-30px; left: -13px;width: 102%; margin-top: 300px">
        @*<h3 class="container">Contact</h3>
        <hr />*@

        <div style="background-color:darkgray;padding:2%;">
            <div class="row container">
                <div class="col-sm-1"></div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" placeholder="Full Name" required="">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" placeholder="Email" required="">
                    </div>
                    <div class="form-group">
                        <label>Phone No</label>
                        <input type="text" name="phoneno" class="form-control" placeholder="Phone No" required="">
                    </div>
                    <div class="form-group">
                        <label>Subject</label>
                        <input type="text" name="subject" class="form-control" placeholder="Subject" required="">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success pull-right">Submit</button>
                    </div>

                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>Message</label>
                        <textarea name="message" placeholder="Message" class="form-control" required=""></textarea>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div>
                        <h4 class="mb-4" style="color:black">Address Information</h4>
                        <p style="color:white">PO Box 248, University Road, Leicester, LE1 9Q<span></span></p>
                        <p style="color:white">Phone : +1 123 456 789 </p>

                        <p style="color:white">Email : <a href="mailto:info@dentalmailmail.com" style="outline: none; cursor: inherit;">info@Library.com</a></p>

                    </div>
                </div>
                <div class="col-sm-1"></div>
            </div>

            <div class="container">
                <div class="copyright text-center p-3">
                    <p style="color:black">&copy; @DateTime.Now.Year. All Rights Reserved - Online Library System</p>
                </div>

            </div>
        </div>


    </footer>


    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
