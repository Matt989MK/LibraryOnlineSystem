@model IEnumerable<LibraryOnlineSystem.Models.Payment>

@{
    ViewBag.Title = "Payments";
    Layout = "~/Views/Shared/_User_Layout.cshtml";
}

<h2>Payments</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Booking.Book.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Booking.DateReturned)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePaid)
        </th>
    </tr>
    
@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Booking.Book.Name)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Status)
    </td>

    <td>
        @Html.ValueFor(modelItem => item.Booking.DateReturned, "{0:dd/MM/yyyy}")
    </td>
    <td>
        @if (item.Status == "Unpaid")
        {
            @*@Html.DisplayFor(modelItem => item.nu)*@
        }
        else
        {
            @Html.DisplayFor(modelItem => item.DatePaid)
        }
        </td>
    <td>
        @if (item.Status == "Unpaid")
        {
            @Html.ActionLink("Pay now", "PayFine", new { userId = item.UserId }) //add Payment
           
        }

    </td>

</tr>
}

</table>
