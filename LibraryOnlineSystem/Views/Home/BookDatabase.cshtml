@model IEnumerable<LibraryOnlineSystem.Book>

@{
    ViewBag.Title = "BookDatabase";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h2>BookDatabase</h2>

<p>
    @Html.ActionLink("Create New", "AddBook")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfPublication)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Overview)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Publisher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfPublication)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Overview)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Publisher)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditBook", new { bookId=item.BookId },null) |
            @*@Html.ActionLink("Details", "Details", new { bookId=item.BookId},null) |*@
            @*@Html.ActionLink("Delete", "DeleteBook", new { bookId=item.BookId},null)*@
        </td>
    </tr>
}

</table>
