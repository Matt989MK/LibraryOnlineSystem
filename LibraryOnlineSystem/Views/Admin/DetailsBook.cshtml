        <div class="col-sm-5">
            <h2 style="color:cornflowerblue;font-family:'Times New Roman'">@Html.DisplayFor(model => model.Name)</h2>
            <h5>
                <b>Authors:</b><br></br>
                @if (Model.Authors != null)
