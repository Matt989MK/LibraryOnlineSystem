@model IEnumerable<LibraryOnlineSystem.Models.BookReserve>

@{
    ViewBag.Title = "ListOfReservations";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<h2>ListOfReservations</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookReserveId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookCodeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReservationRequestTime)
        </th>
        <th>
            Book Serial Number
        </th>
        <th>
            Available
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.UserId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BookReserveId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BookCodeId)
    </td>
    <td>
        @Html.ValueFor(modelItem => item.ReservationRequestTime, "{0:dd/MM/yyyy}")
    </td>
    <td>
        @ViewBag.BookSerialNumber
    </td>
    <td>
        @ViewBag.IsInLibrary
    </td>
    <td>
        @if (ViewBag.IsInLibrary == true)
        {
            @Html.ActionLink("Finalize", "FinalizeReservation", new{userId=item.UserId, reservationId=item.BookReserveId});
        }
    </td>
</tr>
}

</table>
