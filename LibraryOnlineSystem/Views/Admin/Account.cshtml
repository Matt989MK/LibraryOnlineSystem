@model LibraryOnlineSystem.Models.User

@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

    <h2 class="text-center" style="color:black">My Account</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
           Date Of Birth
        </dt>

        <dd>
            @Html.ValueFor(model => model.DateOfBirth, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
           House number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HouseNo)
        </dd>

        <dt>
           PostCode
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZipCode).ToString().ToUpper()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserRole)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserRole)
        </dd>

      
        <div class="row">
        <div class="col-md-4">
            <p>
                @if (Session["isAdmin"].ToString() =="0")
                {
                    <h2>Loan History</h2>

                    <dd>
                        @foreach (var item in Model.Bookings)
                        {
                            <dt>
                                @Html.DisplayNameFor(model => item.Book.BookId)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => item.BookId)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => item.DateCreated)
                            </dt>

                            <dd>
                                @Html.ValueFor(model => item.DateCreated, "{0:dd/MM/yyyy}")
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => item.DateReturned)
                            </dt>

                            <dd>
                                @Html.ValueFor(model => item.DateReturned, "{0:dd/MM/yyyy}")
                            </dd>
                        }
                    </dd>
                }
                
            </p>
          
        </div>
       
       
        </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "UsersAdmin")
</p>
